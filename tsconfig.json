{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true,
    "paths": {
      "@repo/ui": [
        "./packages/ui/src"
      ],
      "@repo/ui/*": [
        "./packages/ui/src/*"
      ],
      "@repo/shared": [
        "./packages/shared/src"
      ],
      "@repo/shared/*": [
        "./packages/shared/src/*"
      ],
      "@repo/backend": [
        "./packages/backend/src"
      ],
      "@repo/backend/*": [
        "./packages/backend/src/*"
      ],
      "@repo/i18n": [
        "./packages/i18n/src"
      ],
      "@repo/i18n/*": [
        "./packages/i18n/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/ui"
    },
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/backend"
    },
    {
      "path": "./packages/i18n"
    },
    {
      "path": "./packages/web"
    },
    {
      "path": "./packages/desktop"
    },
    {
      "path": "./packages/mobile"
    }
  ]
}