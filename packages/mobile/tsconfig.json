{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@repo/ui": ["../ui/src"],
      "@repo/ui/*": ["../ui/src/*"],
      "@repo/i18n": ["../i18n/src"],
      "@repo/i18n/*": ["../i18n/src/*"],
      "@repo/shared": ["../shared/src"],
      "@repo/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "references": [
    { "path": "../ui" },
    { "path": "../i18n" },
    { "path": "../shared" }
  ]
}

