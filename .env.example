# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myoro_arbihawk

# JWT Authentication
# Secret key for signing JWT tokens (minimum 32 characters)
# Generate a secure random string for production
JWT_SECRET=dev-secret-key-change-this-in-production-min-32-chars-required

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_price_id_here

# RapidAPI - API-Football
# Get your API key from: https://rapidapi.com/api-sports/api/api-football
RAPIDAPI_KEY=your_rapidapi_key_here
# Default host (usually doesn't need to be changed)
RAPIDAPI_HOST=api-football-v1.p.rapidapi.com

# Application Configuration
# Public URL of your application (used for redirects, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Sync Job Token
# Secret token for authenticating background sync jobs
# Generate a secure random string
SYNC_JOB_TOKEN=your_sync_job_token_here

# Node Environment
# Options: development, production, test
NODE_ENV=development
