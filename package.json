{
  "name": "myoro-arbihawk",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "bun run --filter @repo/web dev",
    "dev:desktop": "bun run --filter @repo/desktop electron:dev",
    "dev:mobile": "bun run --filter @repo/mobile start",
    "dev:backend": "bun run --filter @repo/backend dev",
    "build:web": "bun run --filter @repo/web build",
    "build:desktop": "bun run --filter @repo/desktop electron:build",
    "build:mobile": "bun run --filter @repo/mobile build",
    "build:backend": "bun run --filter @repo/backend build",
    "db:generate": "bun run --filter @repo/backend db:generate",
    "db:push": "bun run --filter @repo/backend db:push",
    "db:studio": "bun run --filter @repo/backend db:studio",
    "typecheck": "tsc --build",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules/.cache"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
